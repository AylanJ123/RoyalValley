@model IEnumerable<Infrastructure.Models.Residencia>

@{
    ViewBag.Title = "Listado de Residencias";
}

<h2>Listado de Residencias</h2>
<div class="row">
    <div class="col-lg-3">
        <h1 class="my-4">Autor</h1>
        <div class="list-group">


        </div>
    </div>

    <div class="col-lg-9">
        <div id="resultado" class="row">
            @foreach (var item in Model)
            {
                <div class="col-sm-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.ID)</h5>
                            <h6 class="card-subtitle mb-2 text-muted"> <i class="fa-solid fa-circle-user"></i> @Html.DisplayFor(modelItem => item.descripcion)</h6>
                            <p class="card-text" style="font-size: 28px; font-weight: 500; color: #F47A00;">    @Html.DisplayFor(modelItem => item.montoMensual)</p>
                            <div class="card-body">
                                @* Accion Orden *@

                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
