@model IEnumerable<Infrastructure.Models.Cobro>
@using System.Globalization

@{
    ViewBag.Title = "Listado de Estados de Cuenta";
}

<h2>Listado de Estados de Cuenta</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table">
    <tr>
        <th>
            Fecha de cobro
        </th>
        <th>
            No. de Residencia
        </th>
        <th>
            Responsable de pago
        </th>
        <th></th>
    </tr>
    @{ CultureInfo info = new CultureInfo("es-CR"); }
    @foreach (var item in Model)
    {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.fecha.ToString("MMMM del yyyy", info))
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Residencia1.ID)
            </td>
            <td>
                @string.Format("{0} {1} {2}", item.Residencia1.Usuario.nombre, item.Residencia1.Usuario.apellido1, item.Residencia1.Usuario.apellido2)
            </td>
            <td>
                @Html.ActionLink("Detalles", "Details", new { fecha = item.fecha, idResidencia = item.Residencia1.ID, idPlanCobro = item.PlanCobro1 })
                @*
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                        |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                *@
            </td>
        </tr>
    }

</table>
