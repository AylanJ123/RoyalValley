@model IEnumerable<Infrastructure.Models.Residencia>
@using ApplicationCore.Utils.Enums
@using ApplicationCore.Utils.Extensions

@{
    ViewBag.Title = "Listado de Residencias";
}

<h2>Listado de Residencias</h2>
<br/>
<div class="row">
    <div class="col-lg-9">
        <div id="resultado" class="row">
            @foreach (var item in Model)
            {
                <div class="col-sm-4 border listed-card" onclick="window.location.href = '@Url.Action("Details", "Residencia", new { id = item.ID })'">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Residencia No. @Html.DisplayFor(modelItem => item.ID)</h5>
                            <h6 class="card-subtitle mb-2 text-muted">[<i class="fa-solid fa-circle-user">@(((EstadoConstruccion)item.estado).GetDescription())</i>] @Html.DisplayFor(modelItem => item.descripcion)</h6>
                            <p class="card-text mb-0" style="font-size: 28px; font-weight: 500; color: #F47A00;">@((EstadoConstruccion) item.estado == EstadoConstruccion.Construido ? Html.DisplayFor(modelItem => item.montoMensual) + "\u20a1/m" : "No Disponible")</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
